{
  "autoSnippet.snippets": [
    {
      "pattern": "**/*.h",
      "snippet": "c++ header template"
    }
  ],

  "breadcrumbs.enabled": true,

  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, ColumnLimit: 100 }",

  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "editor.autoIndent": "full",
  "editor.cursorBlinking": "smooth",
  "editor.dragAndDrop": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.mouseWheelScrollSensitivity": 0,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.showFoldingControls": "mouseover",
  "editor.snippetSuggestions": "top",
  "editor.renderWhitespace": "selection",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": false,
  "editor.renderControlCharacters": true,
  "editor.rulers": [
    {
      "color": "#ff501030",
      "column": 80
    }
  ],
  "editor.unicodeHighlight.nonBasicASCII": false,

  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "go.autocompleteUnimportedPackages": true,
  "go.useLanguageServer": true,
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.testFlags": [
    "-count=1"
  ],
  "go.toolsManagement.autoUpdate": true,
  "go.editorContextMenuCommands": {
    "toggleTestFile": true,
    "addTags": true,
    "removeTags": false,
    "testAtCursor": true,
    "testFile": false,
    "testPackage": false,
    "generateTestForFunction": true,
    "generateTestForFile": false,
    "generateTestForPackage": false,
    "addImport": true,
    "testCoverage": true,
    "playground": true,
    "debugTestAtCursor": true
  },
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true
  },

  "gopls": {
    "usePlaceholders": true,
    "completeUnimported": true,
    "deepCompletion": true
  },

  "material-icon-theme.activeIconPack": "react_redux",
  "materialTheme.accent": "Pink",

  "npm.fetchOnlinePackageInfo": false,

  "telemetry.telemetryLevel": "off",

  "todo-tree.general.statusBar": "total",
  "todo-tree.filtering.ignoreGitSubmodules": true,
  "todo-tree.tree.grouped": true,
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.highlights.customHighlight": {
    "BUG": {
      "icon": "bug"
    },
    "FIXME": {
      "icon": "flame"
    }
  },
  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment"
  },

  "todo.embedded.provider": "rg",

  "vsicons.presets.foldersAllDefaultIcon": true,

  "window.closeWhenEmpty": false,
  "window.openFilesInNewWindow": "off",
  "window.title": "${activeEditorFull}${separator}${rootName}",

  "workbench.colorTheme": "Noriah Dark",
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",

  "terminal.integrated.fontFamily": "FiraCode Nerd Font",

  "[cpp]": {
    "editor.rulers": [
      {
        "color": "#ff501030",
        "column": 100
      }
    ]
  },

  "[go]": {
    "editor.snippetSuggestions": "inline",
    "editor.formatOnSave": true,
    "editor.suggest.showSnippets": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  }
}
