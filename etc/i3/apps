assign [class="Blueman-manager"] output $disp1
# Float the bluetooth management window
for_window [class="Blueman-manager"] floating enable

# random apps
for_window [class="Alacritty" title="catnip"] border none

for_window [title="Spotify"] move to workspace $ws2
for_window [class="Spotify"] border pixel $borderWidth

# chat apps
assign [class="discord"] $ws3
for_window [class="discord"] border pixel $borderWidth

assign [class="Element"] $ws3
for_window [class="Element"] border pixel $borderWidth

assign [class="Signal"] $ws3
for_window [class="Signal"] border pixel $borderWidth
