## Startup

#exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec_always --no-startup-id xss-lock --transfer-sleep-lock -- i3lock.sh

# DBus Stuffs
exec_always --no-startup-id dbus-update-activation-environment --all

# GNome Keyring
exec_always --no-startup-id gnome-keyring-daemon --start --components=secrets

# Composter
exec_always --no-startup-id DISPLAY=":0" picom -b --experimental-backends

# Top Bar
exec --no-startup-id polybar

# Launch Bar
exec_always --no-startup-id albert

# Password Manager
exec --no-startup-id 1password --silent

# Polkit Agent
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
